<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegisterActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usercpf_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/usercpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/cpf"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usermail_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usercpf_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/usermail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usermailconfirm_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usermail_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/usermailconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/confirmeemail"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usercelphone_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usermailconfirm_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/usercelphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/celular"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usercompanyname_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usercelphone_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/usercompanyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/empresa"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/save_register"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_register_activity"
            android:layout_marginTop="8dp"
            android:text="@string/salvar"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userpasswdconfirm_text_input_layout" />

        <Button
            android:id="@+id/service_type"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="363dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:text="@string/ramo_atividade"
            android:textAlignment="viewStart"
            android:textSize="17sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usercompanyname_text_input_layout" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userpasswd_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/service_type"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/userpasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/digitesuasenha"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userpasswdconfirm_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="@dimen/margin_register_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userpasswd_text_input_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/userpasswdconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_register_activity"
                android:ems="10"
                android:hint="@string/confirmesuasenha"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="266dp"
            android:layout_height="293dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.834" />


    </android.support.constraint.ConstraintLayout>


</ScrollView>
